<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.ProductDetailFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.motion.widget.MotionLayout
       android:id="@+id/motionLayout"
       android:layout_width="match_parent"
       android:layout_height="250dp"
       layoutDescription="@xml/fragment_product_detail_scene"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       tools:ignore="MotionLayoutInvalidSceneFileReference">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:id="@+id/productDetailImage"
          tools:ignore="MissingConstraints" />

      <androidx.constraintlayout.helper.widget.Carousel
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:id="@+id/imageCarousel"
          app:carousel_forwardTransition="@+id/forward"
          app:carousel_backwardTransition="@+id/backward"
          app:carousel_previousState="@+id/previous"
          app:carousel_nextState="@+id/next"
          app:carousel_infinite="true"
          app:constraint_referenced_ids="productDetailImage"
          tools:ignore="MissingConstraints" />

   </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>